<h1>ログイン</h1>

<%= form_with model: @user, url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>

<%= link_to "新規登録", new_user_path %>
